<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Design.DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dashboard_btn_addincome"
            style="@style/dashboard_btn"
            android:drawableTop="@drawable/ic_add_income"
            android:text="Add Income">
        </Button>

        <Button
            android:id="@+id/dashboard_btn_addexpense"
            style="@style/dashboard_btn"
            android:drawableTop="@drawable/ic_add_expense"
            android:text="Add Expense">
        </Button>

        <Button
            android:id="@+id/dashboard_btn_alltransaction"
            style="@style/dashboard_btn"
            android:drawableTop="@drawable/ic_all_transaction"
            android:text="All Transaction">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dashboard_btn_reports"
            style="@style/dashboard_btn"
            android:drawableTop="@drawable/ic_reports"
            android:text="Reports">
        </Button>

        <Button
            android:id="@+id/dashboard_btn_settings"
            style="@style/dashboard_btn"
            android:drawableTop="@drawable/ic_settings"
            android:text="Settings">
        </Button>

        <Button
            android:id="@+id/dashboard_btn_share"
            style="@style/dashboard_btn"
            android:drawableTop="@drawable/ic_share"
            android:text="Share">
        </Button>

    </LinearLayout>

</LinearLayout>