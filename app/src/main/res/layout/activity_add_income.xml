<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10"
    tools:context=".Design.AddIncome">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Category">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_15"
                android:text="a"
                android:visibility="invisible" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/in_sp_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown"
            android:paddingLeft="@dimen/dimen_15" />
    </FrameLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/in_et_amount"
            android:layout_width="match_parent"
            android:hint="Enter Amount"
            android:inputType="number"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="7dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Date">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/in_et_date"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:focusable="false"
                android:paddingLeft="@dimen/dimen_15"
                android:text="a"
                android:textColor="@color/colorPrimary"/>
        </com.google.android.material.textfield.TextInputLayout>

    </FrameLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/in_et_description"
            android:layout_width="match_parent"
            android:hint="Description(Optional)"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dimen_5">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Payment Method">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_15"
                android:text="a"
                android:visibility="invisible" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/in_sp_payment_method"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_15"
            android:entries="@array/Select_Payment_Method"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_10">
        <Button
            android:id="@+id/in_btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add +"
            android:textAppearance="?android:textAppearanceMedium"
            android:fontFamily="sans-serif"
            android:layout_margin="@dimen/dimen_5"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/button_click"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/in_btn_reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reset"
            android:textAppearance="?android:textAppearanceMedium"
            android:fontFamily="sans-serif"
            android:layout_margin="@dimen/dimen_5"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/button_click"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>